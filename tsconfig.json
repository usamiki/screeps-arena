{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext"],
    "target": "es2017",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": false,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "typeRoots": ["./node_modules/@types", "./@types", "./node_modules/@types/screeps-arena/dist"],
    "allowJs": true
  },
  "exclude": ["node_modules"]
}
